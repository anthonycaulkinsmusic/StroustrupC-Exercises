#include "std_lib_facilities.h"

int main()
{
    vector <int> numbers;
    int number = 0;
    
    cout << "Enter two ints, and exit using the '|' symbol: \n";
    
    while(cin >> number)
    {
        numbers.push_back(number);
    
        if (numbers.size() % 2 == 0)
            cout << numbers[numbers.size()-2.] << " " << numbers[numbers.size()-1.] << '\n';
    }
}
