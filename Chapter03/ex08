#include "std_lib_facilities.h"
// header file suggested by Stroustrup
// you may need to specify location of this file ".../std_lib_facilities.h"

//Even-Odd Tester

int main()
{
    cout << "Enter an interger: \n";
    int val1 = 0;
    cin >> val1;

    if (val1%2 == 0)
    {
        cout << "Integer is even!\n";
    }
    else
    {
        cout << "The value " << val1 << " is odd!\n";
    }
}
